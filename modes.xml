<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- tam → eng -->

  <mode name="tam-eng" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="tam-eng.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="tam-eng.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="tam-eng.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="tam-eng.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="tam-eng.autolex.bin"/>
      </program>

      <program name="apertium-transfer -b">
        <file name="apertium-tam-eng.tam-eng.t1x"/>
        <file name="tam-eng.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-tam-eng.tam-eng.t2x"/>
        <file name="tam-eng.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-tam-eng.tam-eng.t3x"/>
        <file name="tam-eng.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="tam-eng.autogen.bin"/>
      </program>

      <program name="lt-proc -p">
        <file name="tam-eng.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>

  <!-- eng → tam -->

  <mode name="eng-tam" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="eng-tam.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="eng-tam.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="eng-tam.prob"/>
      </program>

      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="eng-tam.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="eng-tam.autolex.bin"/>
      </program>

      <program name="apertium-transfer -b">
        <file name="apertium-tam-eng.eng-tam.t1x"/>
        <file name="eng-tam.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-tam-eng.eng-tam.t2x"/>
        <file name="eng-tam.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-tam-eng.eng-tam.t3x"/>
        <file name="eng-tam.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="eng-tam.autogen.bin"/>
      </program>

      <program name="lt-proc -p">
        <file name="eng-tam.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>
</modes>

